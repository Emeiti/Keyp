{
  "hosting": {
    "target": "api-keyp-fo",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/docs",
        "destination": "/docs/index.html"
      },
      {
        "source": "/v1/stores",
        "function": "getStores"
      },
      {
        "source": "/v1/stores/search",
        "function": "searchStores"
      },
      {
        "source": "/v1/stores/stats",
        "function": "getStoreStats"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
